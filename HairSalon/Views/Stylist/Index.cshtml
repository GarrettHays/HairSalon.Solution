@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylist</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
}

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", null, new { id = stylist.StylistId }, new { style = "color:black"} )</li>
  }
</ul>
<br>

<p>@Html.ActionLink("Add new Stylist", "Create", null, null, new { @class = "btn btn-primary btn-primary:hover"})
@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary btn-primary:hover"})</p>