@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new Client</h4>

@using(Html.BeginForm())
{
<hr />
@Html.LabelFor(model => model.Name)
@Html.TextBoxFor(model => model.Name)

@Html.LabelFor(model => model.Description)
@Html.TextBoxFor(model => model.Description)

@Html.LabelFor(model => model.Stylist)
@Html.DropDownList("StylistId")
<hr />
<input type="submit" value="Add new Client" class="btn btn-primary" />

}
<br>
<p>@Html.ActionLink("Show all Clients", "Index", null, null, new { @class = "btn btn-primary btn-primary:hover"})</p>