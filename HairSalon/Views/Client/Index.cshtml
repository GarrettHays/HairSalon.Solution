@{
  Layout ="_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Client</h1>

@if (@Model.Count == 0)
{
  <h3>There are no clients for this stylist.</h3>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", null, new { id = client.ClientId}, new { style = "color:#551c09"}) | @client.Stylist.Name</li>
}
<br>
<p>@Html.ActionLink("Register your Client", "Create", null, null, new { @class = "btn btn-primary btn-primary:hover" })
@Html.ActionLink("Back to home", "Index", "Home", null, new { @class = "btn btn-primary btn-primary:hover" })</p>